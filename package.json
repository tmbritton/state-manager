{
  "name": "state-manager",
  "version": "0.0.1",
  "description": "Simple state manager written in Typescript for use in JS projects.",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmbritton/state-manager.git"
  },
  "author": "Thomas Britton",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tmbritton/state-manager/issues"
  },
  "homepage": "https://github.com/tmbritton/state-manager#readme",
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "jest": "^24.1.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  }
}
